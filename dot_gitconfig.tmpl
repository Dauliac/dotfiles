[user]
    email = {{ .git.email }}
    name = {{ .git.name }}
    signingkey = {{ .git.gpg }}

[merge]
    tool = vimdiff
    ff = true
    commit = false

[merge "ours"]
    driver = true

[diff]
    tool = nvim -d

[pull]
  rebase = true

[branch]
  rebase = true

[branch "develop"]
  remote = origin
  merge = refs/heads/develop
  rebase = true

[branch "beta"]
  remote = origin
  merge = refs/heads/beta
  rebase = false

[branch "stable"]
  remote = origin
  merge = refs/heads/stable
  rebase = false

[alias]
    st = status -sb
    c = clone
    ci = commit
    br = branch -a
    co = checkout
    df = diff
    dc = diff --cached
    l = log --graph --decorate --pretty=oneline --abbrev-commit
    plog = log --graph --pretty=format:'%h -%d %s %n' --abbrev-commit --date=relative --branches
    ls = ls-files
    lg = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    lgh = log --follow -p
    chs = !git checkout $1 $2 && git status &&
    pull = !git pull && git submodule sync --recursive && git submodule update --init --recursive
    # Show files ignored by git:
    publish = git push --set-upstream origin $(git rev-parse â€” abbrev-ref HEAD)
    sync = !git fetch --all --prune && git rebase -p --autostash $1
    ign = ls-files -o -i --exclude-standard
    in = !git fetch && git log --oneline --graph ..@{u}
    ready = !git add --all && git status -sb
    unstage = reset --
    leaderboard = shortlog -s -n
    rollback = reset HEAD~
    alias = config --get-regexp alias
    pl = pull --rebase
    # Tags
    drt = git push origin :refs/tags/$1

[commit]
    template = ~/.gitmessage

[core]
    excludesfile = ~/.gitignore

[mergetool "vimdiff"]
    path = nvim

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[delta]
    plus-style = "syntax #012800"
    minus-style = "syntax #340001"
    syntax-theme = Monokai Extended
    navigate = true

[interactive]
    diffFilter = delta --color-only
